{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    // Chuỗi kết nối SQL Server — kiểm tra xem server name và database có đúng không
    "DefaultConnection": "Server=DESKTOP-FKPCPPB;Database=MyShop;Trusted_Connection=True;TrustServerCertificate=True;"
  },

  "JwtSettings": {
    // Đây là SecretKey dùng để mã hóa/giải mã token JWT, phải khớp với bên phát token
    "SecretKey": "my-very-strong-secret-key"
    // Nếu bạn dùng Issuer & Audience, có thể thêm 2 dòng này:
    // "Issuer": "your-api",
    // "Audience": "your-client"
  }
}
